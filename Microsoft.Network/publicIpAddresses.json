{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "allocationMethod": {
            "allowedValues": [
                "Dynamic",
                "Static"
            ],
            "defaultValue": "Static",
            "metadata": {
                "description": "Specifies the allocation method of the Azure Public IP Address."
            },
            "type": "string"
        },
        "auditLogAnalyticsWorkspaceName": {
            "metadata": {
                "description": "Specifies the name of the Azure Log Analytics workspace that the Azure Public IP Address audit feature will send its data to."
            },
            "type": "string"
        },
        "auditLogAnalyticsWorkspaceResourceGroupName": {
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "Specifies the resource group name of the Azure Log Analytics workspace that the Azure Public IP Address audit feature will send its data to."
            },
            "type": "string"
        },
        "auditLogAnalyticsWorkspaceSubscriptionId": {
            "defaultValue": "[subscription().subscriptionId]",
            "metadata": {
                "description": "Specifies the subscription id of the Azure Log Analytics workspace that the Azure Public IP Address audit feature will send its data to."
            },
            "type": "string"
        },
        "availabilityZones": {
            "defaultValue": [
                "1",
                "2",
                "3"
            ],
            "metadata": {
                "description": "Specifies an array of availability zones that the Azure Public IP Address will be deployed within."
            },
            "type": "array"
        },
        "dnsPrefix": {
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the DNS prefix to that will be assigned to the Azure Public IP Address."
            },
            "type": "string"
        },
        "idleTimeoutInMinutes": {
            "defaultValue": 4,
            "metadata": {
                "description": "Specifies the idle timout of the Azure Public IP Address (in minutes)."
            },
            "type": "int"
        },
        "ipPrefixName": {
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the name of the the Azure Public IP prefix that this Azure Public IP Address will be derived from."
            },
            "type": "string"
        },
        "ipPrefixResourceGroupName": {
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
                "description": "Specifies the resource group name of the the Azure Public IP prefix that this Azure Public IP Address will be derived from."
            },
            "type": "string"
        },
        "ipPrefixSubscriptionId": {
            "defaultValue": "[subscription().subscriptionId]",
            "metadata": {
                "description": "Specifies the subscription id of the the Azure Public IP prefix that this Azure Public IP Address will be derived from."
            },
            "type": "string"
        },
        "location": {
            "metadata": {
                "description": "Specifies the location in which the Azure Public IP Address resource(s) will be deployed."
            },
            "type": "string"
        },
        "name": {
            "maxLength": 80,
            "metadata": {
                "description": "Specifies the name of the Azure Public IP Address."
            },
            "minLength": 1,
            "type": "string"
        },
        "skuName": {
            "allowedValues": [
                "Basic",
                "Standard"
            ],
            "defaultValue": "Standard",
            "metadata": {
                "description": "Specifies the SKU name of the Azure Public IP Address."
            },
            "type": "string"
        },
        "skuTier": {
            "allowedValues": [
                "Global",
                "Regional"
            ],
            "defaultValue": "Regional",
            "metadata": {
                "description": "Specifies the SKU tier of the Azure Public IP Address."
            },
            "type": "string"
        },
        "tags": {
            "defaultValue": {},
            "metadata": {
                "description": "Specifies the set of tag key-value pairs that will be assigned to the Azure Public IP Address."
            },
            "type": "object"
        },
        "version": {
            "allowedValues": [
                "IPv4",
                "IPv6"
            ],
            "defaultValue": "IPv4",
            "metadata": {
                "description": "Specifies the version of the Azure Public IP Address."
            },
            "type": "string"
        }
    },
    "variables": {
        "isAuditingEnabled": "[not(empty(parameters('auditLogAnalyticsWorkspaceName')))]",
        "publicIpAddressResourceId": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('name'))]"
    },
    "resources": [
        {
            "apiVersion": "2020-08-01",
            "location": "[parameters('location')]",
            "name": "[parameters('name')]",
            "properties": {
                "dnsSettings": "[if(empty(parameters('dnsPrefix')), json('null'), createObject('domainNameLabel', parameters('dnsPrefix')))]",
                "idleTimeoutInMinutes": "[parameters('idleTimeoutInMinutes')]",
                "publicIPAddressVersion": "[parameters('version')]",
                "publicIPAllocationMethod": "[parameters('allocationMethod')]",
                "publicIPPrefix": "[if(empty(parameters('ipPrefixName')), json('null'), createObject('id', resourceId(parameters('ipPrefixSubscriptionId'), parameters('ipPrefixResourceGroupName'), 'Microsoft.Network/publicIPPrefixes', parameters('ipPrefixName'))))]"
            },
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('skuTier')]"
            },
            "tags": "[parameters('tags')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "zones": "[if(empty(parameters('availabilityZones')), json('null'), parameters('availabilityZones'))]"
        },
        {
            "apiVersion": "2017-05-01-preview",
            "dependsOn": [
                "[variables('publicIpAddressResourceId')]"
            ],
            "location": "[parameters('location')]",
            "name": "[format('{0}/microsoft.insights/audit', parameters('name'))]",
            "properties": {
                "logs": [
                    {
                        "category": "DDoSMitigationFlowLogs",
                        "enabled": "[variables('isAuditingEnabled')]",
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "DDoSMitigationReports",
                        "enabled": "[variables('isAuditingEnabled')]",
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    },
                    {
                        "category": "DDoSProtectionNotifications",
                        "enabled": "[variables('isAuditingEnabled')]",
                        "retentionPolicy": {
                            "enabled": false,
                            "days": 0
                        }
                    }
                ],
                "workspaceId": "[if(variables('isAuditingEnabled'), resourceId(parameters('auditLogAnalyticsWorkspaceSubscriptionId'), parameters('auditLogAnalyticsWorkspaceResourceGroupName'), 'Microsoft.OperationalInsights/workspaces', parameters('auditLogAnalyticsWorkspaceName')), json('null'))]"
            },
            "type": "Microsoft.Network/publicIPAddresses/providers/diagnosticsettings"
        }
    ]
}
