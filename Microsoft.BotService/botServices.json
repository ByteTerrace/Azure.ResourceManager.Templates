{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "audit": {
            "defaultValue": {},
            "metadata": {
                "description": "An object that encapsulates the audit settings that will be applied to the Azure Bot Service."
            },
            "type": "object"
        },
        "channels": {
            "defaultValue": {},
            "metadata": {
                "description": "An object that encapsulates the channel settings that will be applied to the Azure Bot Service."
            },
            "type": "object"
        },
        "isLocalAuthenticationEnabled": {
            "defaultValue": false,
            "metadata": {
                "description": "Indicates whether the Azure Bot Service permits local authentication."
            },
            "type": "bool"
        },
        "isPublicNetworkAccessEnabled": {
            "defaultValue": false,
            "metadata": {
                "description": "Indicates whether the Azure Bot Service is accessible from the internet."
            },
            "type": "bool"
        },
        "name": {
            "metadata": {
                "description": "Specifies the name of the Azure Bot Service."
            },
            "type": "string"
        },
        "tags": {
            "defaultValue": {},
            "metadata": {
                "description": "Specifies the set of tag key-value pairs that will be assigned to the Azure Bot Service."
            },
            "type": "object"
        },
        "userAssignedManagedIdentity": {
            "metadata": {
                "description": "An object that encapsulates the user-assigned managed identity settings that will be applied to the Azure Bot Service."
            },
            "type": "object"
        }
    },
    "variables": {
        "apiVersions": {
            "botServices": "2021-03-01",
            "botServicesChannels": "2021-03-01",
            "diagnosticSettings": "2017-05-01-preview",
            "userAssignedIdentities": "2018-11-30"
        },
        "audit": "[union(variables('defaultResourceProperties').audit, parameters('audit'))]",
        "defaultResourceProperties": {
            "audit": {
                "isEnabled": true,
                "logAnalyticsWorkspace": {
                    "name": "",
                    "resourceGroupName": "[variables('resourceGroupName')]",
                    "subscriptionId": "[variables('subscriptionId')]"
                },
                "logNames": [
                    "BotRequest"
                ],
                "retentionPolicy": {
                    "days": 137,
                    "isEnabled": true
                }
            },
            "channels": {
                "directLine": {
                    "isEnabled": false
                },
                "microsoftTeams": {
                    "isCallingEnabled": false,
                    "isEnabled": false
                },
                "webChat": {
                    "isEnabled": false
                }
            },
            "userAssignedManagedIdentity": {
                "resourceGroupName": "[variables('resourceGroupName')]",
                "subscriptionId": "[variables('subscriptionId')]"
            }
        },
        "isAuditEnabled": "[variables('audit').isEnabled]",
        "isAuditLogAnalyticsWorkspaceNameNotEmpty": "[not(empty(variables('audit').logAnalyticsWorkspace.name))]",
        "resourceGroupName": "[resourceGroup().name]",
        "resourceIds": {
            "auditLogAnalyticsWorkspace": "[resourceId(variables('audit').logAnalyticsWorkspace.subscriptionId, variables('audit').logAnalyticsWorkspace.resourceGroupName, 'Microsoft.OperationalInsights/workspaces', if(variables('isAuditLogAnalyticsWorkspaceNameNotEmpty'), variables('audit').logAnalyticsWorkspace.name, '<NULL>'))]",
            "botService": "[resourceId('Microsoft.BotService/botServices', parameters('name'))]",
            "managedIdentity": "[resourceId(union(variables('defaultResourceProperties').userAssignedManagedIdentity, parameters('userAssignedManagedIdentity')).subscriptionId, union(variables('defaultResourceProperties').userAssignedManagedIdentity, parameters('userAssignedManagedIdentity')).resourceGroupName, 'Microsoft.ManagedIdentity/userAssignedIdentities', parameters('userAssignedManagedIdentity').name)]"
        },
        "subscriptionId": "[subscription().subscriptionId]"
    },
    "resources": [
        {
            "apiVersion": "[variables('apiVersions').botServices]",
            "kind": "azurebot",
            "location": "global",
            "name": "[parameters('name')]",
            "properties": {
                "disableLocalAuth": "[not(parameters('isLocalAuthenticationEnabled'))]",
                "displayName": "[parameters('name')]",
                "iconUrl": "https://docs.botframework.com/static/devportal/client/images/bot-framework-default.png",
                "isStreamingSupported": false,
                "msaAppId": "[reference(variables('resourceIds').managedIdentity, variables('apiVersions').userAssignedIdentities).clientId]",
                "msaAppMSIResourceId": "[variables('resourceIds').managedIdentity]",
                "msaAppTenantId": "[reference(variables('resourceIds').managedIdentity, variables('apiVersions').userAssignedIdentities).tenantId]",
                "msaAppType": "UserAssignedMSI",
                "publicNetworkAccess": "[if(parameters('isPublicNetworkAccessEnabled'), 'Enabled', 'Disabled')]",
                "schemaTransformationVersion": "1.3"
            },
            "sku": {
                "name": "S1"
            },
            "tags": "[parameters('tags')]",
            "type": "Microsoft.BotService/botServices"
        },
        {
            "apiVersion": "[variables('apiVersions').botServicesChannels]",
            "condition": "[union(variables('defaultResourceProperties').channels, parameters('channels')).directLine.isEnabled]",
            "dependsOn": [
                "[variables('resourceIds').botService]"
            ],
            "location": "global",
            "name": "[format('{0}/DirectLineChannel', parameters('name'))]",
            "properties": {
                "channelName": "DirectLineChannel",
                "properties": {
                    "sites": [
                        {
                            "isBlockUserUploadEnabled": false,
                            "isEnabled": true,
                            "isV1Enabled": true,
                            "isV3Enabled": true,
                            "isSecureSiteEnabled": false,
                            "siteName": "Default_Site"
                        }
                    ]
                }
            },
            "type": "Microsoft.BotService/botServices/channels"
        },
        {
            "apiVersion": "[variables('apiVersions').botServicesChannels]",
            "condition": "[union(variables('defaultResourceProperties').channels, parameters('channels')).microsoftTeams.isEnabled]",
            "dependsOn": [
                "[variables('resourceIds').botService]"
            ],
            "location": "global",
            "name": "[format('{0}/MsTeamsChannel', parameters('name'))]",
            "properties": {
                "channelName": "MsTeamsChannel",
                "properties": {
                    "acceptedTerms": true,
                    "callingWebHook": "[null()]",
                    "deploymentEnvironment": "0",
                    "enableCalling": "[union(variables('defaultResourceProperties').channels, parameters('channels')).microsoftTeams.isCallingEnabled]",
                    "incomingCallRoute": "graphPma"
                }
            },
            "type": "Microsoft.BotService/botServices/channels"
        },
        {
            "apiVersion": "[variables('apiVersions').botServicesChannels]",
            "condition": "[union(variables('defaultResourceProperties').channels, parameters('channels')).webChat.isEnabled]",
            "dependsOn": [
                "[variables('resourceIds').botService]"
            ],
            "location": "global",
            "name": "[format('{0}/WebChatChannel', parameters('name'))]",
            "properties": {
                "channelName": "WebChatChannel",
                "properties": {
                    "sites": [
                        {
                            "isEnabled": true,
                            "isWebchatPreviewEnabled": true,
                            "siteName": "Default Site"
                        }
                    ]
                }
            },
            "type": "Microsoft.BotService/botServices/channels"
        },
        {
            "apiVersion": "[variables('apiVersions').diagnosticSettings]",
            "condition": "[or(variables('isAuditEnabled'), variables('isAuditLogAnalyticsWorkspaceNameNotEmpty'))]",
            "dependsOn": [
                "[variables('resourceIds').botService]"
            ],
            "location": "global",
            "name": "[format('{0}/Microsoft.Insights/audit', parameters('name'))]",
            "properties": {
                "copy": [
                    {
                        "count": "[length(variables('audit').logNames)]",
                        "input": {
                            "category": "[variables('audit').logNames[copyIndex('logs')]]",
                            "enabled": "[variables('isAuditEnabled')]",
                            "retentionPolicy": {
                                "days": "[variables('audit').retentionPolicy.days]",
                                "enabled": "[variables('audit').retentionPolicy.isEnabled]"
                            }
                        },
                        "name": "logs"
                    }
                ],
                "workspaceId": "[variables('resourceIds').auditLogAnalyticsWorkspace]"
            },
            "type": "Microsoft.BotService/botServices/providers/diagnosticsettings"
        }
    ]
}
